{
  "entities": {
    "Project": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Project",
      "type": "object",
      "description": "Represents a project in the portfolio.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the project."
        },
        "title": {
          "type": "string",
          "description": "Title of the project."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the project."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the project's main image."
        },
        "imageHint": {
          "type": "string",
          "description": "AI hint for the project image."
        },
        "category": {
          "type": "string",
          "description": "The category of the project."
        },
        "software": {
          "type": "array",
          "description": "Software used in the project.",
          "items": {
            "type": "string"
          }
        },
        "resources": {
          "type": "array",
          "description": "List of external resources for the project.",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["website", "github"]
              }
            },
            "required": ["label", "url", "type"]
          }
        }
      },
      "required": [
        "id",
        "title",
        "description",
        "imageUrl",
        "category",
        "software"
      ]
    },
    "Profile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Profile",
      "type": "object",
      "description": "Represents the user's profile information.",
      "properties": {
        "profileImageUrl": {
          "type": "string",
          "description": "URL of the profile image."
        },
        "aboutImageUrl": {
          "type": "string",
          "description": "URL of the image for the 'About Me' page."
        },
        "aboutImageHint": {
          "type": "string",
          "description": "AI hint for the about image."
        },
        "aboutText1": {
          "type": "string",
          "description": "First paragraph for the 'About Me' page."
        },
        "aboutText2": {
          "type": "string",
          "description": "Second paragraph for the 'About Me' page."
        },
        "aboutText3": {
          "type": "string",
          "description": "Third paragraph for the 'About Me' page."
        }
      },
      "required": [
        "profileImageUrl",
        "aboutImageUrl",
        "aboutText1",
        "aboutText2",
        "aboutText3"
      ]
    },
    "SocialLink": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SocialLink",
      "type": "object",
      "description": "Represents a social media link.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the social link."
        },
        "name": {
          "type": "string",
          "description": "Name of the social media platform (e.g., 'LinkedIn', 'GitHub')."
        },
        "url": {
          "type": "string",
          "description": "URL of the social media profile."
        },
        "icon": {
          "type": "string",
          "description": "Icon identifier from lucide-react for the social media platform."
        }
      },
      "required": ["id", "name", "url", "icon"]
    },
    "Article": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Article",
      "type": "object",
      "description": "Represents a blog article.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the article."
        },
        "title": {
          "type": "string",
          "description": "Title of the article."
        },
        "excerpt": {
          "type": "string",
          "description": "A short summary of the article."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the article's main image."
        },
        "imageHint": {
          "type": "string",
          "description": "AI hint for the article image."
        },
        "content": {
          "type": "string",
          "description": "The full content of the article in Markdown format."
        },
        "publishedDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date the article was published."
        }
      },
      "required": ["id", "title", "excerpt", "content", "publishedDate", "imageUrl"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/projects/{projectId}": {
      "schema": {
        "$ref": "#/entities/Project"
      },
      "description": "Stores project details."
    },
    "/profile/{profileId}": {
      "schema": {
        "$ref": "#/entities/Profile"
      },
      "description": "Stores the single profile document for the site."
    },
    "/social_links/{socialLinkId}": {
      "schema": {
        "$ref": "#/entities/SocialLink"
      },
      "description": "Stores social media links for the footer."
    },
    "/articles/{articleId}": {
      "schema": {
        "$ref": "#/entities/Article"
      },
      "description": "Stores blog articles."
    }
  }
}
